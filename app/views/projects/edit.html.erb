<%= link_to 'Back', @project, class: 'btn btn-secondary mb-3' %>
<div class="card">
  <div class="card-body">
    <h2 class='card-title mb-4'>
      <span>Editing project with Deadline: </span>
      <% if @project.deadline.blank? %>
        <span class="badge badge-danger">Don't forget to update your deadline</span>
        <% else %>
        <span class="badge badge-pill badge-dark"><%=  @project.deadline.strftime('%d-%m-%Y') %></span>
      <% end %>
    </h2>
    <%= render 'form', project: @project %>
  </div>
</div>