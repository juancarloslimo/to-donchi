<h1 class="text-center mt-4"></h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <div class="card">
      <h5 class="card-header">Login</h5>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "col-form-label text-light" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow rounded", placeholder: "Enter your email address" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "col-form-label text-light" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control shadow rounded", placeholder: "Enter your password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="form-group row justify-content-center">
              <%= f.submit "Log in", class: "btn btn-success btn-lg" %>
            </div>
            <div class="mb-3">
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


